# Example room association config. Copy this to `room_assoc_config/room_assoc.yml` and edit as needed.
#
# Format: a top-level `associations` list of mappings with keys: sensor_id, room_id, start_date, end_date
# Timestamps should be ISO-8601 strings (UTC recommended). 
# Use `null` or omit start_date for "from the beginning".
# Use `null` or omit end_date for "until now".

associations:
  # First living room sensor
  - sensor_id: 0123456789AB
    room_id: living-room
    start_date: null
    end_date: 2025-06-01T00:00:00Z

  # Replacement living room sensor after June 2025
  - sensor_id: C0FFEE123456
    room_id: living-room
    start_date: 2025-06-01T00:00:00Z
    end_date: null

  # Bedroom sensor active since May 2023
  - sensor_id: DEADBEEF9876
    room_id: bedroom
    start_date: 2023-05-20T00:00:00Z
    end_date: null
